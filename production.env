# Production Environment Configuration
# Copy this to .env and modify for your production environment

# Application Settings
DEBUG=false
APP_NAME="AI Backend Service"
VERSION="1.0.0"

# API Configuration
API_V1_PREFIX="/api/v1"
MAX_REQUEST_SIZE=10000

# Google AI Configuration
GOOGLE_API_KEY=your_production_google_api_key_here
AI_MODEL=gemini-1.5-flash

# Redis Configuration (Production)
REDIS_URL=redis://your-redis-host:6379/0
CACHE_TTL=3600

# Celery Configuration (Production)
CELERY_BROKER_URL=redis://your-redis-host:6379/1
CELERY_RESULT_BACKEND=redis://your-redis-host:6379/2

# Security Settings (Add these for production)
SECRET_KEY=your-super-secret-key-here
ALLOWED_HOSTS=your-domain.com,api.your-domain.com
CORS_ORIGINS=https://your-frontend.com,https://your-app.com

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@host:port/database